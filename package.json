{
  "name": "fse",
  "version": "5.0.0",
  "description": "fs: then-ified, extended, and dependency-free",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "repository": "jonathantneal/fse",
  "homepage": "https://github.com/jonathantneal/fse#readme",
  "bugs": "https://github.com/jonathantneal/fse/issues",
  "type": "module",
  "main": "index.cjs",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.mjs",
    "index.d.ts"
  ],
  "scripts": {
    "build": "node bin/build.js",
    "prepublishOnly": "npm test && npm run build",
    "pretest:node": "npm run build",
    "test": "node bin/test-unit.js",
    "lint": "node bin/test-lint.js"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "devDependencies": {
    "esbuild": "0.8.54",
    "eslint": "7.21.0",
    "pre-commit": "1.2.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": [
      "bin/*.js"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "root": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 240,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yml"
        ],
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "keywords": [
    "fs",
    "async",
    "await",
    "promise",
    "promised",
    "promiseified",
    "promises",
    "promisified",
    "thenified",
    "catch",
    "finally",
    "then",
    "copy",
    "directory",
    "extend",
    "extended",
    "extends",
    "file",
    "file",
    "files",
    "json",
    "read",
    "remove",
    "system",
    "touch",
    "write",
    "cjs",
    "esm",
    "node",
    "nodejs",
    "linux",
    "macos",
    "windows"
  ]
}
